<%= simple_form_for(@script) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.label :content %>
    <div id="script-content" class="form-control" style="height:250px"><%= @script.content %></div>
    <br>
    <p>
      Use <code>print("message")</code> to print output.
    </p>

    <%= f.hidden_field :content, input_html: {height: 250} %>
    <br>
    <script>
    var editor = ace.edit("script-content");
    editor.setTheme("ace/theme/github");
    editor.getSession().setMode("ace/mode/ruby");

    $("form").submit(function(){
      $("#script_content").val(editor.getValue());
    });
    </script>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
